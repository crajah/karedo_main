# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.MainController.index
GET     /register                   controllers.MainController.register
POST    /register                   controllers.MainController.submitRegistration
GET     /registerApplication        controllers.MainController.registerApplication
POST    /registerApplication        controllers.MainController.submitRegisterApplication
POST    /confirmActivation          controllers.MainController.confirmActivation
GET     /editProfile                controllers.MainController.editProfile
POST    /editProfile                controllers.MainController.updateProfile
GET     /message                    controllers.MessageController.getMessage()
GET     /assets/javascripts/routes  controllers.MessageController.javascriptRoutes()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)